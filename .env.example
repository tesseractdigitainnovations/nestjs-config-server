# Optional auth (if omitted â†’ no auth)
CONFIG_AUTH_USER=admin
CONFIG_AUTH_PASS=secret
# Example environment variables for NestJS Config Server

# Config source: 'file' or 'git'
CONFIG_SOURCE=file

# Directory for config files
CONFIG_DIR=./configs

# Git repo URL (required if CONFIG_SOURCE=git)
CONFIG_GIT_REPO=https://github.com/example/configs.git

# Git branch to use
CONFIG_GIT_BRANCH=main

# Enable basic authentication ('true' or 'false')
AUTH_ENABLED=false

# Username for basic auth
CONFIG_AUTH_USER=admin

# Password for basic auth
CONFIG_AUTH_PASS=secret

# Port to run the server
PORT=3333

CONFIG_SOURCE=file # 'file' or 'env' (default: 'file')
CONFIG_FILE_PATH=./config.json
#CONFIG_FILE_PATH=./config.yaml
#CONFIG_FILE_PATH=./config.yml

CONFIG_GIT_BRANCH=main